@model ApplicationUser
@{
    ViewData["Title"] = "Account Overview";
}

<div class="container py-5">
    <h2 class="mb-4">Account Overview</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fw-semibold">First Name</label>
                <p class="form-control-plaintext">@Model.FirstName</p>
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Last Name</label>
                <p class="form-control-plaintext">@Model.LastName</p>
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>
        </div>
    </div>

    <a value="Edit" class="btn btn-primary" asp-controller="Account" asp-action="Edit" method="get"
            style="margin-top:1vh; margin-bottom:1vh; background-color:yellow; color:black;">Edit</a>

    <a type="submit" value="Logout" class="btn btn-primary" asp-action="Logout"
           style="background-color:red; color:white;">Logout</a>

    
</div>