<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - VehicleRentalService</title>
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">
	<header class="bg-dark text-white p-3">
		<div class="container">
			<h1>Vehicle Rental Service</h1>
		</div>
	</header>

	<div class="container-fluid flex-grow-1">
		<div class="row">
			<aside class="col-md-3 col-lg-2 bg-light border-end min-vh-100 p-3">
				@await Component.InvokeAsync("NavigationMenu")
			</aside>

			<main class="col-md-9 col-lg-10 p-4">
				@RenderBody()
			</main>
		</div>
	</div>

	<footer class="bg-light text-center p-3 mt-auto">
		<div class="container">
			&copy; 2025 Vehicle Rental Service
		</div>
	</footer>

	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
