@model VehicleRentalService.Models.ViewModels.VehicleListViewModel
<link rel="stylesheet" href="@Url.Content("~/css/card-styles.css")" />

@{
    foreach (var v in Model.Vehicles)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@v.Name</h5>
                <p class="card-text">@v.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h5 mb-0">@v.PricePerMinute/minute</span>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light">
                <form asp-controller="Home" asp-action="SetCookies" method="post">
                    <input type="number" name="Quantity" value="1" min="1" class="form-control-sm" />
                    <input type="hidden" name="VehicleType" value="@v.GetType().Name" />
                    <input type="hidden" name="VehicleId" value="@v.VehicleId" />
                    <button class="btn btn-primary btn-sm" type="submit">Add to Cart</button>
                </form>
            </div>
        </div>
    }

    <div>
        Page @Model.PagingInfo.CurrentPage / @Model.PagingInfo.TotalPages
    </div>

    <div>
        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
        {
            if (i == Model.PagingInfo.CurrentPage)
            {
                <span>@i</span>
            }
            else
            {
                <a href="@Url.Action("Index", new { page = i, category = ViewData["CurrentCategory"] })">@i</a>
            }
        }
    </div>
}
