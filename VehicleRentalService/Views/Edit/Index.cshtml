@model VehicleRentalService.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="EditVehicle" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PricePerHour"></label>
        <input asp-for="PricePerHour" class="form-control" />
        <span asp-validation-for="PricePerHour" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <input type="hidden" asp-for="VehicleId" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>